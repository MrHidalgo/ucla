block subheader
	include components/academic/_subheader

block header
	include components/common/_header-academic

block footer
	include components/common/_footer-academic

block content
	div.body.body--start(class!= pageClassName)

		include components/academic/_main
		include components/academic/_schedule


		mixin modalContent()
			.c-modal__body
				form(action='' method='' autocomplete='off')
					label
						input(type='text' name='' placeholder='Search Here...')

		+modal('searchModal', 'modalContent')
